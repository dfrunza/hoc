include "abs.hoc";

proc int gcd_(int a, int b);

proc int gcd_(int a, int b)
{
  var int result = a;
  if(b != 0)
  {
    result = b;
    var int r = a % b;
    if(r == 0)
      result = b;
    else
      result = gcd_(b, r);
  }
  return result;
}

/*
   Greatest Common Divisor
 */
proc int gcd(int a, int b)
{
  return gcd_(abs(a), abs(b));
}

/*
   Least Common Multiple
 */
proc int lcm(int a, int b)
{
  return abs(a*b)/gcd(a, b);
}

