int sqrt_iter(int x, int g)
{
  int r = x/g;

  if(r != g)
  {
    r = (r+g)/2;
    if(abs(r-g) == 1)
      r = min(r, g);
  }
  return r;
}

/*
   Computes the largest number 'r' such that 'r*r <= x'
 */
int sqrt_floor(int x)
{
  int g = x;
  int r = 1;

  while((g > 0) && (g != r))
  {
    g = r;
    r = sqrt_iter(x, g);
  }
  return g;
}
