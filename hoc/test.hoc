proc void
print_numbers(int* numbers, int len)
{
  var int i = 0;
  while(i < len)
  {
    print_int(numbers[i]);
    print_str("\n");

    i = i+1;
  }
}

proc int*
make_numbers(int how_many)
{
  var int i = 0;
  var int c1 = 17;
  var int c2 = 31;
  var int* numbers = new(int, how_many);

  while(i < how_many)
  {
    if((i % 2) == 0)
      numbers[i] = c1 * i;
    else
      numbers[i] = c2 * i;

    i = i+1;
  }
  return numbers;
}

